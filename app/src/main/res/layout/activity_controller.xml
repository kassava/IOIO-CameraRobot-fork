<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/relativeLayout2"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/black"
                                             android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_camera_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:id="@+id/btn_auto_focus"
        android:layout_width="@dimen/command_button_size"
        android:layout_height="@dimen/command_button_size"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_focus"
        app:layout_constraintEnd_toStartOf="@+id/btn_take_photo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"/>

    <Button
        android:id="@+id/btn_take_photo"
        android:layout_width="@dimen/command_button_size"
        android:layout_height="@dimen/command_button_size"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_snap"
        app:layout_constraintEnd_toStartOf="@+id/cbFlash"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"/>

    <CheckBox
        android:id="@+id/cbFlash"
        android:layout_width="@dimen/command_button_size"
        android:layout_height="@dimen/command_button_size"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_flash"
        android:button="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <RelativeLayout
        android:id="@+id/layout_joystick"
        android:layout_width="@dimen/controller_size"
        android:layout_height="@dimen/controller_size"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/image_button_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@android:color/holo_orange_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:rippleColor="@android:color/black"
        app:srcCompat="@drawable/ic_action_name"/>

</android.support.constraint.ConstraintLayout>